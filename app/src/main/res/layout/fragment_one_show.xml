<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg_fragment_4"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_fg_one_show_del"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_fg_one_show_del" />

        <ImageView
            android:id="@+id/iv_fg_one_show_save"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/iv_fg_one_show_del"
            android:layout_toStartOf="@+id/iv_fg_one_show_del"
            app:srcCompat="@drawable/ic_fg_one_show_save" />

        <ImageView
            android:id="@+id/iv_fg_one_show_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/iv_fg_one_show_save"
            android:layout_marginStart="12dp"
            app:srcCompat="@drawable/ic_back" />


    </RelativeLayout>



    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        >
            <ListView
                android:id="@+id/lv_fg_one_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dividerHeight="6dp"
                />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_fg_one_show_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_weight="1"
            app:srcCompat="@drawable/ic_left" />

        <ImageView
            android:id="@+id/iv_fg_one_show_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_first_text" />

        <ImageView
            android:id="@+id/iv_fg_one_show_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_right" />
    </LinearLayout>



    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/btn"
            android:id="@+id/button"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="回                    发" />
    </LinearLayout>

</LinearLayout>
